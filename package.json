{
  "name": "pylot-mcp-server",
  "version": "0.2.0",
  "private": false,
  "type": "module",
  "description": "MCP server for Pylot headless content APIs (read-only).",
  "bin": {
    "pylot-mcp-server": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/mcp-server.js",
    "dev": "tsx watch src/mcp-server.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "tsx": "^4.16.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "content",
    "headless",
    "imaginuity",
    "pylot"
  ]
}